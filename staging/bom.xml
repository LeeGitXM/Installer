<?xml version="1.0" encoding="UTF-8"?>
<installer>
	<title>EMC Ignition Applications</title>
	<description>Installer for EMC Ignition Applications.</description>
	<property name="product">Ignition Applications</property>
	<property name="release">0.1r15</property>
	<property name="date">Mar 17, 2016</property>
	<property name="version">2</property>
	<!-- These entries define the install panels and their order -->
	<panel type="welcome">
	  <title>ILS Automation Installer for EMC Ignition Applications</title>
	  <preamble>Welcome. blah, blah, blah.</preamble>
	</panel>
	<panel type="license">
	  <title>End User License Agreement (EULA)</title>
	  <preamble>This agreement covers ...</preamble>
	  <artifact name="license" type="html">
	  	<location>artifacts/license/license.html</location>
	  </artifact>
	</panel>
	<panel type="backup">
	  <title>Archive into an Ignition Backup</title>
	  <preamble>This is an optional step. The backup allows you to revert the previous state of the application.</preamble>
	</panel>
	<panel type="module">
	  <title>Install Custom Modules</title>
	  <preamble>This step installs modules necessary for the EMC applications.</preamble>
	  <artifact name="ILS-SFC" type="module">
	  	<location>artifacts/modules/ILS-SFC-module-signed.modl</location>
	  </artifact>
	  <artifact name="BLT" type="module">
	  	<location>artifacts/modules/BLT-module-signed.modl</location>
	  </artifact>
	</panel>
	<panel type="conclusion">
	  <title>Installation Complete</title>
	  <preamble>Record the current version of EMC Ignition Applications in the Gateway internal database.</preamble>
	</panel>
</installer>

