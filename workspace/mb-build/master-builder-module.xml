<?xml version="1.0" encoding="UTF-8"?>

<module>
	<id>com.ils.mb</id>
	<name>MasterBuilder</name>
	<description>Master Builder Module: ILS-Automation, for Application Installer construction.</description>
	<license>license.html</license>
	<documentation>index.html</documentation>
	<version>1.0.0.0</version>
	<freemodule>true</freemodule>
	<requiredignitionversion>7.8.0</requiredignitionversion>
	<requiredframeworkversion>7</requiredframeworkversion>

	<!-- Load in our jars for each scope -->
	<export scope="G">ils-common.jar</export>
	<jar scope="G">mb-gateway.jar</jar>
	<jar scope="G">jackson-annotations-2.2.3.jar</jar>
	<jar scope="G">jackson-core-2.2.3.jar</jar>
	<jar scope="G">jackson-databind-2.2.3.jar</jar>
	<jar scope="D">mb-designer.jar.pack.gz</jar>
	<jar scope="G">mb-common.jar</jar>
	<jar scope="DC">mb-common.jar.pack.gz</jar>

	<!-- Tell the Gateway and/or Designer where to find the hooks -->
	<hook scope="G">com.ils.mb.gateway.MasterBuilderGatewayHook</hook>
	<hook scope="D">com.ils.mb.designer.MasterBuilderDesignerHook</hook>
	<hook scope="C">com.ils.mb.client.MasterBuilderClientHook</hook>
</module>

