<?xml version="1.0" encoding="UTF-8"?>

<module>
	<id>com.ils.installer</id>
	<name>IgnitionApplicationsInstaller</name>
	<description>ILS Installer for Ignition Applications</description>
	<license />
	<version>1.8.0.1</version>
	<freemodule>true</freemodule>
	<requiredignitionversion>8.0.1</requiredignitionversion>
	<requiredframeworkversion>8</requiredframeworkversion>

	<!-- Load in our jars for each scope -->
	<export scope="G">ils-common.jar</export>
	<jar scope="G">ai-gateway.jar</jar>
	<!-- Tell the Gateway and/or Designer where to find the hooks -->
	<hook scope="G">com.ils.ai.gateway.ApplicationInstallerGatewayHook
	</hook>
</module>

