<?xml version="1.0" encoding="UTF-8"?>

<module>
	<id>com.ils.installer</id>
	<name>LafargeHolcimPOCInstaller</name>
	<description>ILS Installer for LafargeHolcim Ignition Applications</description>
	<license />
	<version>1.0.0.0</version>
	<freemodule>true</freemodule>
	<requiredignitionversion>7.8.2</requiredignitionversion>
	<requiredframeworkversion>7</requiredframeworkversion>

	<!-- Load in our jars for each scope -->
	<export scope="G">ils-common.jar</export>
	<jar scope="G">ai-gateway.jar</jar>
	<!-- Tell the Gateway and/or Designer where to find the hooks -->
	<hook scope="G">com.ils.ai.gateway.ApplicationInstallerGatewayHook
	</hook>
</module>

